<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:context="http://www.springframework.org/schema/context"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- MainPageServlet -->
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>BeNi.servlets.MainPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- EndPageServlet -->
    <servlet>
        <servlet-name>EndPageServlet</servlet-name>
        <servlet-class>BeNi.servlets.EndPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EndPageServlet</servlet-name>
        <url-pattern>/end</url-pattern>
    </servlet-mapping>

    <!-- HouseBuilderPageServlet -->
    <servlet>
        <servlet-name>HouseBuilderPageServlet</servlet-name>
        <servlet-class>BeNi.servlets.HouseBuilderPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HouseBuilderPageServlet</servlet-name>
        <url-pattern>/houseBuilder</url-pattern>
    </servlet-mapping>

    <!-- HouseManagerPageServlet -->
    <servlet>
        <servlet-name>HouseManagerPageServlet</servlet-name>
        <servlet-class>BeNi.servlets.HouseManagerPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HouseManagerPageServlet</servlet-name>
        <url-pattern>/houseManager</url-pattern>
    </servlet-mapping>

    <!-- LinkCompletePageServlet -->
    <servlet>
        <servlet-name>LinkCompletePageServlet</servlet-name>
        <servlet-class>BeNi.servlets.LinkCompletePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LinkCompletePageServlet</servlet-name>
        <url-pattern>/link_complete</url-pattern>
    </servlet-mapping>

    <!-- PossessionsPageServlet -->
    <servlet>
        <servlet-name>PossessionsPageServlet</servlet-name>
        <servlet-class>BeNi.servlets.PossessionsPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PossessionsPageServlet</servlet-name>
        <url-pattern>/possessions</url-pattern>
    </servlet-mapping>

</web-app>